{
  "manifest_version": 2,
 
  "name": "Unit4 UX Enhancements",
  "version": "0.1.8",
  "description": "Enhances the UX for Unit4",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
 
  "permissions": [
    "storage"
  ],

  "content_scripts": [{
    "all_frames": true,
    "css": ["styles.css"],
    "run_at": "document_end",
    "js": ["all-frames.js"],
    "matches": ["https://csportal12.u4a.se/p470014-web/*"]
  },
  {
    "all_frames": false,
    "run_at": "document_end",
    "js": ["root.js"],
    "matches": ["https://csportal12.u4a.se/p470014-web/*"]
  }],
  "background":
  {
    "scripts":[
      "background.js"
    ]
  }
}