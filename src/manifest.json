{
  "manifest_version": 2,
 
  "name": "Unit4 UX Enhancements",
  "version": "0.1.14",
  "description": "Enhances the UX for Unit4",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
 
  "permissions": [
    "storage"
  ],

  "page_action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"

  },

  "content_scripts": [{
    "all_frames": true,
    "css": ["styles.css"],
    "run_at": "document_end",
    "js": ["all-frames.js"],
    "matches": ["https://csportal12.u4a.se/p470014-web/*"]
  },
  {
    "all_frames": false,
    "run_at": "document_end",
    "js": ["root.js"],
    "matches": ["https://csportal12.u4a.se/p470014-web/*"]
  }],
  "background":
  {
    "scripts":[
      "background.js"
    ]
  }
}
